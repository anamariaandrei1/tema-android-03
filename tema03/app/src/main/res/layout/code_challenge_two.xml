<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/xs"
		android:layout_marginRight="@dimen/xs">

		<TextView
			android:id="@+id/textViewTop"
			android:layout_width="@dimen/m"
			android:layout_height="@dimen/m"
			android:layout_alignParentStart="true"
			android:layout_marginTop="@dimen/s"
			android:background="@color/yellow" />

		<TextView
			android:id="@+id/textViewTwo"
			android:layout_width="@dimen/m"
			android:layout_height="@dimen/m"
			android:layout_alignBaseline="@id/textViewTop"
			android:layout_alignEnd="@id/textViewThree"
			android:layout_margin="@dimen/m"
			android:layout_marginTop="@dimen/s"
			android:background="@color/greenLight" />

		<TextView
			android:id="@+id/textViewThree"
			android:layout_width="@dimen/m"
			android:layout_height="@dimen/m"
			android:layout_alignEnd="@+id/textViewFour"
			android:layout_alignBaseline="@id/textViewTop"
			android:layout_marginTop="@dimen/s"
			android:layout_margin="@dimen/l"
			android:background="@color/blueLight" />

		<TextView
			android:id="@+id/textViewFour"
			android:layout_width="@dimen/m"
			android:layout_height="@dimen/m"
			android:layout_alignBaseline="@id/textViewTop"
			android:layout_alignParentEnd="true"
			android:layout_marginTop="@dimen/s"
			android:background="@color/redLight" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/textViewTop"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/s"
				android:text="@string/scrollViewInfo" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/s"
				android:text="@string/scrollViewInfo" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/s"
				android:text="@string/scrollViewInfo" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/s"
				android:text="@string/scrollViewInfo" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/s"
				android:text="@string/scrollViewInfo" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/s"
				android:text="@string/scrollViewInfo" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/s"
				android:text="@string/scrollViewInfo" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/s"
				android:text="@string/scrollViewInfo" />

		</LinearLayout>
	</RelativeLayout>
</ScrollView>
